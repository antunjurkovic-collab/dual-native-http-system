{
    "name": "dual-native/http-system",
    "description": "Framework-agnostic PHP library implementing the Dual-Native Pattern with CID validation, bidirectional linking, and zero-fetch optimization",
    "type": "library",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Dual-Native Team",
            "email": "info@dual-native.org"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "DualNative\\HTTP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DualNative\\HTTP\\Tests\\": "tests/"
        }
    },
    "keywords": [
        "dual-native",
        "content-identity",
        "cid",
        "etag",
        "cache",
        "http",
        "rest-api",
        "wordpress",
        "framework-agnostic",
        "optimistic-concurrency"
    ],
    "config": {
        "sort-packages": true
    }
}